# Server environment example (safe to commit)
# Copy to .env and fill secrets locally or in your hosting env.

# URLs
FRONTEND_URL=https://algobucks-tau.vercel.app
FRONTEND_ORIGIN=https://algobucks-tau.vercel.app
API_URL=https://algobucks.onrender.com

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/?retryWrites=true&w=majority&appName=DataSet

# Auth
JWT_SECRET=change_me
JWT_EXPIRE=30d
SESSION_SECRET=change_me

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SMTP (Contact page)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Email provider (optional HTTP provider to avoid SMTP issues)
# Choose ONE provider by setting EMAIL_PROVIDER to either 'sendgrid' or 'resend'.
# Do NOT commit real keys here; set them only in server/.env or your hosting env.
# Examples:
#   EMAIL_PROVIDER=sendgrid
#   SENDGRID_API_KEY=your_sendgrid_api_key
#   EMAIL_FROM=noreply@your-verified-domain.com
# or
#   EMAIL_PROVIDER=resend
#   RESEND_API_KEY=your_resend_api_key
#   EMAIL_FROM=onboarding@resend.dev (for testing) or noreply@your-verified-domain.com
EMAIL_PROVIDER=
SENDGRID_API_KEY=
RESEND_API_KEY=
# Sender email (must be verified with your provider)
EMAIL_FROM=
# Frontend build consumes this if proxied
VITE_API_URL=https://algobucks.onrender.com/api

# Payments (if used)
PAYMENTS_MODE=live
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Runtimes
JAVAC_BIN=javac
JAVA_BIN=java
PYTHON_BIN=python
