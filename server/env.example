# Server environment example (safe to commit)
# Copy to .env and fill secrets locally or in your hosting env.

# URLs
FRONTEND_URL=https://algobucks-tau.vercel.app
FRONTEND_ORIGIN=https://algobucks-tau.vercel.app
API_URL=https://algobucks.onrender.com

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/?retryWrites=true&w=majority&appName=DataSet

# Auth
JWT_SECRET=change_me
JWT_EXPIRE=30d
SESSION_SECRET=change_me

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SMTP (Contact page)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Email provider (optional HTTP provider to avoid SMTP issues)
# Set EMAIL_PROVIDER=resend and provide RESEND_API_KEY to use Resend API instead of SMTP
EMAIL_PROVIDER=resend
RESEND_API_KEY="re_9YsKNZHz_3W2SUUhT9e4wFUoxNssb1MP8"

# Frontend build consumes this if proxied
VITE_API_URL=https://algobucks.onrender.com/api

# Payments (if used)
PAYMENTS_MODE=live
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Runtimes
JAVAC_BIN=javac
JAVA_BIN=java
PYTHON_BIN=python
